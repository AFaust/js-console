<alfresco-config>

	<config evaluator="string-compare" condition="DocLibCustom">
		<dependencies>
			<js src="fme/components/jsconsole/jsconsole-actions.js" />
		</dependencies>
	</config>

	<config evaluator="string-compare" condition="DocLibActions">
		<actions>
			<action id="de_fme_jsconsole-open-in-jsconsole" type="javascript"
				label="fme.action.open.in.jsconsole" icon="open-in-jsconsole">
				<param name="function">onActionOpenInJavascriptConsole</param>
				<evaluator>fme.evaluator.doclib.action.isAdmin</evaluator>
			</action>
		</actions>

		<actionGroups>
			<actionGroup id="document-browse">
				<action index="400" id="de_fme_jsconsole-open-in-jsconsole" />
			</actionGroup>
			<actionGroup id="document-details">
				<action index="400" id="de_fme_jsconsole-open-in-jsconsole" />
			</actionGroup>
			<actionGroup id="folder-browse">
				<action index="400" id="de_fme_jsconsole-open-in-jsconsole" />
			</actionGroup>
			<actionGroup id="folder-details">
				<action index="400" id="de_fme_jsconsole-open-in-jsconsole" />
			</actionGroup>
		</actionGroups>

	</config>

	<config evaluator="string-compare" condition="Remote">
	  <remote>
 
 		<authenticator>
 			<id>oauth-token</id>
 			<name>OAuth Access Token Authenticator</name>
 			<description>Uses an access token from the repository backed OAuth ticket store and puts it the
 			   Authentication header</description>
 			<class>org.sharextras.webscripts.connector.OAuth2Authenticator</class>
 		</authenticator>
 
		<connector>
			<id>http-oauth</id>
			<name>OAuth2 Connector</name>
			<description>HTTP Connector with support for OAuth2 authentication</description>
			<class>org.sharextras.webscripts.connector.OAuth2AuthenticatingConnector</class>
			<authenticator-id>oauth-token</authenticator-id>
		</connector>

		<endpoint>
	      <id>github-api</id>
	      <name>GitHub Api</name>
	      <connector-id>http-oauth</connector-id>
	      <endpoint-url>https://api.github.com</endpoint-url>
	    </endpoint>	    
		
 	  </remote>
	</config>

</alfresco-config>   