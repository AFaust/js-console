<alfresco-config>

	<config evaluator="string-compare" condition="DocLibCustom">
		<dependencies>
			<js src="fme/components/jsconsole/jsconsole-actions.js" />
		</dependencies>
	</config>

	<config evaluator="string-compare" condition="DocLibActions">
		<actions>
			<action id="de_fme_jsconsole-open-in-jsconsole" type="javascript"
				label="fme.action.open.in.jsconsole" icon="open-in-jsconsole">
				<param name="function">onActionOpenInJavascriptConsole</param>
				<evaluator>fme.evaluator.doclib.action.isAdmin</evaluator>
			</action>
		</actions>

		<actionGroups>
			<actionGroup id="document-browse">
				<action index="400" id="de_fme_jsconsole-open-in-jsconsole" />
			</actionGroup>
			<actionGroup id="document-details">
				<action index="400" id="de_fme_jsconsole-open-in-jsconsole" />
			</actionGroup>
			<actionGroup id="folder-browse">
				<action index="400" id="de_fme_jsconsole-open-in-jsconsole" />
			</actionGroup>
			<actionGroup id="folder-details">
				<action index="400" id="de_fme_jsconsole-open-in-jsconsole" />
			</actionGroup>
		</actionGroups>

	</config>

	<config evaluator="string-compare" condition="Remote">
	  <remote>
        <connector>
            <id>oauth2-header-token</id>
            <name>Chatter OAuth 2.0 Connector</name>
            <description>HTTP Connector with support for OAuth 2.0 authentication</description>
            <class>org.sharextras.webscripts.connector.HttpOAuth2Connector</class>
            <identity>user</identity>
            <auth-method>token</auth-method>
        </connector>
            		 
        <endpoint>
            <id>github-api</id>
            <name>GitHub Api</name>
            <connector-id>oauth2-header-token</connector-id>
            <endpoint-url>https://api.github.com</endpoint-url>
            <client-id>478fcdc445fa7b29ecf3</client-id>
            <client-secret>187d2f9181448e4b0b260125a39aa4d04133fe49</client-secret>
            <access-token-url>https://github.com/login/oauth/access_token</access-token-url>
        </endpoint>	  
        		
	    <endpoint>
	      <id>github-gist</id>
	      <name>GitHub Gist</name>
	      <connector-id>http</connector-id>
	      <endpoint-url>https://gist.github.com</endpoint-url>
	    </endpoint>	 		
 	  </remote>
	</config>

</alfresco-config>   